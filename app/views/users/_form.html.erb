<% if(@user.errors.any?) %>
    <h2>The below errors have flagged an error with your input, please check them</h2>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
        <%end %>
    </ul>
<% end %>
            
<%= form_with(model: @user,local: true) do |f| %>
    <p>
        <%= f.label :username %> <br/> 
        <%= f.text_field :username, placeholder: "enter user name" %>
    </p>

    <p>
        <%= f.label :email %> <br/>
        <%= f.email_field :email, placeholder: "enter email" %>   
    </p>

    <p>
        <%= f.label :password %> <br/>
        <%= f.password_field :password, placeholder: "enter a valid password" %>   
    </p>




    <p>
        <%= f.submit(@user.new_record? ? "sign up" : "update account")%>
    </p>
    <%=button_to "Return to articles", articles_path, method: :get%>
<% end %>