<html lang="en">
    <head>
        <title></title>

        <meta charset="utf-8" />

        <style>
            .title{
                padding:30px;
            }
            # h3{padding:40px}
        </style>
    </head>


    <body>

        <h1><%=@user.username%>'s profile</h1>
       
