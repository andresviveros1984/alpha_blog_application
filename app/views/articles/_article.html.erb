<!doctype html> <!--tells the browser which version of hmtl in this case html5-->
<html lang="en">
    <head>
        <title></title>

        <meta charset="utf-8" />

        <style>
            h1{
                color:blue;
            }
            th{
                color:red;
            }

        </style>
    </head>


    <body>

    

        <table>
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan ='3'>Actions</th>
            </tr>
            </thead>

            <tbody>
                <% @articles.each do |article|  %>
                    by <%= article.user.username %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.description %></td>
                    <td><%= link_to 'Show', article_path(article)%> </td>
                    <td><%= link_to 'Edit', edit_article_path(article)%> </td>
                    <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Confirm delete" }%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
          <br>
        <%= link_to 'Create new article', new_article_path %>

    </body>





</html>